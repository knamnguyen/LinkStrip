{
  "manifest_version": 3,
  "name": "LinkStrip - Strip the ðŸ’© from your LinkedIn feed",
  "version": "0.1.1",
  "description": "What's up, LinkedIn afficionado?",
  "icons": {
    "16": "icons/ls-icon-16x16.png",
    "32": "icons/ls-icon-32x32.png",
    "128": "icons/ls-icon-192x192.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "LinkStrip",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/ls-icon-16x16.png",
      "32": "icons/ls-icon-32x32.png"
    }
  },
  "permissions": ["storage", "tabs"],
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/feed/*"],
      "run_at": "document_idle",
      "js": ["contentScript.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/ls-icon-512x512.png"],
      "matches": ["https://www.linkedin.com/*"]
    }
  ]
}
